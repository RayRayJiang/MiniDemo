.content {
  display: flex;
  flex-direction: column;
  text-align: left;
}
.content .goodsimg {
  height: 550rpx;
  padding-bottom: 20rpx;
}
.content .goodsname,
.content .taste,
.content .price {
  padding: 20rpx 40rpx;
}
.content .goodsname {
  font-weight: bold;
  font-size: 40rpx;
}
.content .price {
  color: red;
  padding-bottom: 20rpx;
}
.content .skus {
  font-size: 30rpx;
  padding: 20rpx 40rpx;
  background-color: #f1f1f1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content .skus .iconimg {
  font-size: 40rpx;
  color: #555555;
}
.content .taste {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content .taste .tastename,
.content .taste .sweetness {
  font-size: 35rpx;
  width: 300rpx;
}
